<assembly>
	<id>create-distro</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<moduleSets>
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <outputDirectory>.</outputDirectory>
        <unpack>false</unpack>
      </binaries>      
    </moduleSet>
    <!-- -->
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <attachmentClassifier>sources</attachmentClassifier>
        <outputDirectory>.</outputDirectory>
        <unpack>false</unpack>
      </binaries>      
    </moduleSet>
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <attachmentClassifier>javadoc</attachmentClassifier>
        <outputDirectory>javadoc</outputDirectory>
        <unpack>true</unpack>
      </binaries>      
    </moduleSet>

    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb-examples</include>
      </includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<!-- configuration matches with descriptor-ref "project" -->
        <fileSets>
          <fileSet>
						<outputDirectory>examples</outputDirectory>
						<useDefaultExcludes>true</useDefaultExcludes>
						<excludes>
							<exclude>**/*.log</exclude>
							<exclude>**/${project.build.directory}/**</exclude>
						</excludes>
          </fileSet>
        </fileSets>
			</sources>
    </moduleSet>
  </moduleSets>
	<fileSets>
    <fileSet>
      <directory>src/main/resources/licensing</directory>
      <outputDirectory>licensing</outputDirectory>
    </fileSet>
	</fileSets>
  
</assembly>
