<assembly>
	<id>create-distro</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <outputDirectory>.</outputDirectory>
        <unpack>false</unpack>
      </binaries>      
    </moduleSet>
    <!-- -->
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <attachmentClassifier>sources</attachmentClassifier>
        <outputDirectory>.</outputDirectory>
        <unpack>false</unpack>
      </binaries>      
    </moduleSet>
    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb</include>
      </includes>
			<binaries>
        <attachmentClassifier>javadoc</attachmentClassifier>
        <outputDirectory>javadoc</outputDirectory>
        <unpack>true</unpack>
      </binaries>      
    </moduleSet>

    <moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>*:restfb-examples</include>
      </includes>
			<sources>
				<!--
				<includeModuleDirectory>false</includeModuleDirectory>
				-->
        <fileSets>
          <fileSet>
            <directory>src/main/java</directory>
          </fileSet>
        </fileSets>
			</sources>
    </moduleSet>
  </moduleSets>
	<fileSets>
    <fileSet>
      <directory>src/main/resources/misc</directory>
      <outputDirectory>misc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/licensing</directory>
      <outputDirectory>licensing</outputDirectory>
    </fileSet>
	</fileSets>
  
</assembly>
